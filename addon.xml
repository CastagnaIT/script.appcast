<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.appcast" name="AppCast" version="1.0.0" provider-name="CastagnaIT">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="script.module.requests" version="2.12.4"/>
        <import addon="script.module.addon.signals" version="0.0.6+matrix.1"/>
    </requires>
    <extension point="xbmc.python.script" library="script.py" />
    <extension point="xbmc.service" library="service.py"/>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Platform to allow the add-ons to support audio/video Cast feature</summary>
        <description lang="en_GB">This platform will add the Cast feature to Kodi, any add-ons will be able to take advantage of this feature to make audio/video Cast from the preferred app's to Kodi.</description>
        <platform>all</platform>
        <license>MIT</license>
        <forum></forum>
        <email></email>
        <source>https://github.com/CastagnaIT/script.appcast</source>
        <news>
        </news>
        <disclaimer lang="en_GB">This script only implements the feature, each add-on has to implement its own code to allow audio/video Cast.</disclaimer>
        <assets>
            <icon>resources/media/icon.jpg</icon>
            <fanart>resources/media/fanart.jpg</fanart>
            <screenshot>resources/media/screenshot-01.jpg</screenshot>
            <screenshot>resources/media/screenshot-02.jpg</screenshot>
            <screenshot>resources/media/screenshot-03.jpg</screenshot>
        </assets>
    </extension>
</addon>
